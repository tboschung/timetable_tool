{
    "compilerOptions": {
      "target": "es5",                           
      "module": "commonjs",                       
      "outDir": "./dist",                         
      "strict": true,                            
      "esModuleInterop": true,                    
      "skipLibCheck": true,                       
      "forceConsistentCasingInFileNames": true    
    },
    "include": ["src/**/*.ts"],  // Include all TypeScript files under /src
    "exclude": ["node_modules"]  // Exclude dependencies
  }
  